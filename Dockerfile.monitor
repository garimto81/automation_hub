FROM python:3.11-slim

WORKDIR /app

# 의존성 설치
COPY pyproject.toml .
RUN pip install --no-cache-dir -e ".[monitor]"

# 소스 복사
COPY shared/ /app/shared/
COPY monitor/ /app/monitor/

ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

EXPOSE 8080

CMD ["uvicorn", "monitor.main:app", "--host", "0.0.0.0", "--port", "8080"]
